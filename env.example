# Chatico Mapper App Environment Configuration
# Copy this file to .env and fill in your actual values

# Instagram API Configuration
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Application Security
SECRET_KEY=your_application_secret_key

# Database Configuration (for local development)
# DATABASE_URL=postgresql+asyncpg://chatico_user:chatico_password@localhost:5432/chatico_mapper

# RabbitMQ Configuration (for local development)
# RABBITMQ_URL=amqp://chatico_user:chatico_password@localhost:5672/chatico_vhost

# Redis Configuration (for local development)
# REDIS_URL=redis://:chatico_password@localhost:6379

# Optional: Override default settings
# DEBUG=true
# LOG_LEVEL=DEBUG
# HOST=0.0.0.0
# PORT=8000
