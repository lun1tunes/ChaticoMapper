# Application
APP_NAME=Chatico Mapper App
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO
OAUTH_REDIRECT_URL=http://example.com/chatico/settings
OAUTH_REDIRECT_PATH=/chatico/settings

# HTTP server
HOST=0.0.0.0
PORT=8100

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://chatico_user:chatico_password@localhost:5433/chatico_mapper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Instagram Graph API
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=instagram_app_secret
WEBHOOK_INIT_VERIFY_TOKEN=webhook_init_verify_token
INSTAGRAM_API_BASE_URL=https://graph.instagram.com/v23.0
INSTAGRAM_AUTH_URL=https://www.instagram.com/oauth/authorize
INSTAGRAM_REDIRECT_URI=http://example.com/api/v1/auth/instagram/callback
INSTAGRAM_AUTH_SCOPES=instagram_business_basic,instagram_business_manage_comments,instagram_business_manage_insights
INSTAGRAM_WEBHOOK_SUBSCRIBED_FIELDS=comments

# YouTube Data API (OAuth 2.0)
YOUTUBE_CLIENT_ID=your_youtube_oauth_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_oauth_client_secret
YOUTUBE_API_KEY=your_public_api_key_if_needed_for_readonly_calls
YOUTUBE_REDIRECT_URI=http://example.com/api/v1/auth/google/callback

# Optional Redis cache (leave empty to disable)
REDIS_URL=redis://localhost:6380/0
REDIS_TTL=86400
REDIS_PASSWORD=redis_password

# Security / auth
OAUTH_STATE_SECRET=your_oauth_state_signing_secret
# Must be urlsafe base64-encoded 32-byte key (typically ends with '=' padding)
OAUTH_ENCRYPTION_KEY=generate_with_python_-c_"import_base64,os;print(base64.urlsafe_b64encode(os.urandom(32)).decode())"
JWT_SECRET_KEY=generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
