# Application Settings
APP_NAME=Chatico Mapper App
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (PostgreSQL)
# Note: Port 5433 to avoid conflict with instachatico-app
DATABASE_URL=postgresql+asyncpg://chatico_user:chatico_password@localhost:5433/chatico_mapper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Instagram API Settings
INSTAGRAM__APP_ID=your_instagram_app_id
INSTAGRAM__APP_SECRET=your_instagram_app_secret
INSTAGRAM__ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM__API_BASE_URL=https://graph.instagram.com/v23.0
INSTAGRAM__API_TIMEOUT=30
INSTAGRAM__RATE_LIMIT=200

# Webhook Security Settings
WEBHOOK__SECRET=your_instagram_app_secret
WEBHOOK__VERIFY_TOKEN=your_webhook_verify_token
WEBHOOK__MAX_SIZE=1048576

# Redis Settings (Cache)
# Note: Port 6380 to avoid conflict with instachatico-app
REDIS__URL=redis://localhost:6380/0
REDIS__TTL=86400

# Security Settings
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
