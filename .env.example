# Application
APP_NAME=Chatico Mapper App
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# HTTP server
HOST=0.0.0.0
PORT=8100

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://chatico_user:chatico_password@localhost:5433/chatico_mapper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Instagram Graph API
INSTAGRAM_APP_SECRET=instagram_app_secret
WEBHOOK_INIT_VERIFY_TOKEN=webhook_init_verify_token
INSTAGRAM_API_BASE_URL=https://graph.instagram.com/v23.0

# Optional Redis cache (leave empty to disable)
REDIS_URL=redis://localhost:6380/0
REDIS_TTL=86400

# Security / auth
JWT_SECRET_KEY=generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
